---
import { getCollection } from "astro:content";
import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/MainLayout.astro";
import BlogPost from "src/components/BlogPost.astro";
import TaypedBlogPost from "src/components/TaypedBlogPost.astro";

const blogPosts = await getCollection('blog');

---

<MainLayout title="Javier's Blog">
  <!-- component -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <!-- <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {posts.map((post) => <BlogPost { ...post } />)}
      </div> -->
      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {blogPosts.map((post) => <TaypedBlogPost post={ post } />)}
      </div>
    </div>
  </section>
</MainLayout>
